<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

  <title>Twilio Virtual Phone</title>
</head>

<body>
  <div class="container">
    <h1 class="mt-5">Send SMS</h1>
    <form action="/outgoing" method="post">
      <div class="mb-3">
        <label for="to" class="form-label">To</label>
        <input type="text" class="form-control" id="to" name="to" required>
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Message</label>
        <textarea class="form-control" id="body" name="body" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>

    <h2 class="mt-5">Incoming Messages</h2>
    <ul class="list-group">
      <% messages.forEach(message=> { %>
        <li class="list-group-item">
          <strong>From:</strong>
          <%= message.from %> <br>
            <strong>Message:</strong>
            <%= message.body %>
        </li>
        <% }) %>
    </ul>

    <h2 class="mt-5">Message Status Updates</h2>
    <ul class="list-group">
      <% statuses.forEach(status=> { %>
        <li class="list-group-item">
          <strong>Message SID:</strong>
          <%= status.messageSid %> <br>
            <strong>Status:</strong>
            <%= status.messageStatus %>
        </li>
        <% }) %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>